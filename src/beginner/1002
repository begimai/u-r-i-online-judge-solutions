import java.util.*;
public class Main {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);  //I am using it because of the difference in Russian and English versions of a Decimal Separator 
		final double pi = 3.14159;     // using final, because pi is a constant
		Scanner scan = new Scanner(System.in);
		double r = scan.nextDouble();
		double a = (pi * r*r);
		System.out.printf("A=%.4f\n",a);
	}
}
